# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: Int!
  text: String!
  done: Boolean!
  user: User!
  userId: Int!
}

type User {
  id: Int!
  age: Int!
  name: String!
}

type Query {
  todos: [Todo!]!
  users: [User!]!
}

input NewTodo {
  text: String!
  userId: Int!
}

input NewUser {
  name: String!
  age: Int!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createUser(input: NewUser!): User!
}
